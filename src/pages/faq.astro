---
import PageLayout from "@layouts/PageLayout.astro";
import SchemaFAQPage from "@components/seo/SchemaFAQPage.astro";
import { getFAQByCategory } from "@/data/faq";

const bookingFAQs = getFAQByCategory("booking");
const processFAQs = getFAQByCategory("process");
---

<PageLayout
  title="FAQ"
  description="Frequently asked questions about Simon Wickes Photography services, booking, pricing, and what to expect."
>
  <SchemaFAQPage />
  <section class="mx-auto max-w-4xl px-6 py-16">
    <h1
      class="mb-4 font-display text-4xl font-bold tracking-tight text-surface-900 dark:text-surface-100"
    >
      Frequently Asked Questions
    </h1>
    <p class="mb-8 text-lg text-surface-600 dark:text-surface-400">
      Everything you need to know about working with me. Can't find what you're
      looking for?
      <a
        href="/contact/"
        class="text-accent-500 underline hover:text-accent-600 dark:text-accent-400 dark:hover:text-accent-300"
        >Get in touch</a
      >.
    </p>

    <div>
      <h2
        class="mb-6 mt-12 font-display text-2xl font-bold text-amber-600 dark:text-amber-400"
      >
        Booking & Pricing
      </h2>
      {
        bookingFAQs.map((item) => (
          <div class="mb-8">
            <h3 class="mb-2 text-lg font-semibold text-surface-900 dark:text-surface-100">
              {item.question}
            </h3>
            <p class="leading-relaxed text-surface-600 dark:text-surface-400">
              {item.answer}
            </p>
          </div>
        ))
      }
    </div>

    <div>
      <h2
        class="mb-6 mt-12 font-display text-2xl font-bold text-amber-600 dark:text-amber-400"
      >
        Process & Deliverables
      </h2>
      {
        processFAQs.map((item) => (
          <div class="mb-8">
            <h3 class="mb-2 text-lg font-semibold text-surface-900 dark:text-surface-100">
              {item.question}
            </h3>
            <p class="leading-relaxed text-surface-600 dark:text-surface-400">
              {item.answer}
            </p>
          </div>
        ))
      }
    </div>

    <div
      class="mt-12 border-t border-surface-200 pt-8 text-center dark:border-surface-800"
    >
      <p class="mb-4 text-lg text-surface-600 dark:text-surface-400">
        Still have questions?
      </p>
      <a
        href="/contact/"
        class="inline-block rounded-lg bg-accent-500 px-6 py-3 font-semibold text-white transition-colors hover:bg-accent-600 dark:bg-accent-400 dark:text-surface-950 dark:hover:bg-accent-300"
      >
        Get in Touch
      </a>
    </div>
  </section>
</PageLayout>
