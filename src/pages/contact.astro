---
import PageLayout from "../layouts/PageLayout.astro";
import ContactForm from "@components/contact/ContactForm.astro";
---

<PageLayout
  title="Contact"
  description="Get in touch with Simon Wickes Photography for bookings and enquiries."
>
  <section class="mx-auto max-w-4xl px-6 py-16">
    <h1
      class="mb-4 font-display text-4xl font-bold tracking-tight text-surface-900 dark:text-surface-100"
    >
      Get in Touch
    </h1>
    <p class="mb-2 text-lg text-surface-600 dark:text-surface-400">
      Interested in booking a session or have a question about my services? Fill
      out the form below and I'll get back to you within 24-48 hours.
    </p>
    <p class="mb-10 text-sm text-surface-500 dark:text-surface-500">
      Check out the <a
        href="/faq/"
        class="text-accent-500 underline hover:text-accent-600 dark:text-accent-400 dark:hover:text-accent-300"
        >FAQ</a
      > for answers to common questions.
    </p>

    <ContactForm />
  </section>
</PageLayout>
