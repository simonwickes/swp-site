---
import PageLayout from "../layouts/PageLayout.astro";
---

<PageLayout title="Page Not Found">
  <section class="mx-auto max-w-4xl px-6 py-16 text-center">
    <p class="mb-4 font-display text-8xl font-bold text-accent-400 dark:text-accent-500">
      404
    </p>
    <h1 class="mb-4 font-display text-3xl font-bold tracking-tight">
      Page Not Found
    </h1>
    <p class="mb-8 text-lg text-surface-600 dark:text-surface-400">
      The page you are looking for does not exist or has been moved.
    </p>
    <a
      href="/"
      class="inline-block rounded-lg bg-accent-500 px-6 py-3 font-semibold text-white transition-colors hover:bg-accent-600 dark:bg-accent-400 dark:text-surface-950 dark:hover:bg-accent-300"
    >
      Back to Home
    </a>
  </section>
</PageLayout>
