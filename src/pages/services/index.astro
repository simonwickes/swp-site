---
import PageLayout from "@layouts/PageLayout.astro";
import { services } from "@/data/services";
---

<PageLayout title="Services" description="Photography services offered by Simon Wickes.">
  <section class="mx-auto max-w-6xl px-6 py-16 md:py-24">
    <h1 class="mb-4 text-center font-display text-4xl font-bold tracking-tight md:text-5xl">
      Services
    </h1>
    <p class="mx-auto mb-12 max-w-2xl text-center text-lg text-surface-600 dark:text-surface-400">
      From intimate portraits to grand celebrations, explore the photography services I offer.
    </p>

    <div class="grid gap-6 sm:grid-cols-2">
      {
        services.map((service) => (
          <a
            href={`/services/${service.slug}/`}
            class="group block rounded-lg border border-surface-200 p-6 transition-colors hover:border-accent-500 hover:bg-surface-50 dark:border-surface-700 dark:hover:border-accent-400 dark:hover:bg-surface-800"
          >
            <h2 class="mb-2 font-display text-xl font-semibold group-hover:text-accent-600 dark:group-hover:text-accent-400">
              {service.title}
            </h2>
            <p class="text-surface-600 dark:text-surface-400">
              {service.description}
            </p>
          </a>
        ))
      }
    </div>
  </section>
</PageLayout>
