---
import PageLayout from "../../layouts/PageLayout.astro";

const services = [
  {
    name: "Outdoor Portraits",
    description: "Natural light portraits in beautiful outdoor settings.",
    href: "/services/outdoor-portraits/",
  },
  {
    name: "Weddings",
    description: "Capturing your special day with authentic moments.",
    href: "/services/weddings/",
  },
  {
    name: "Commercial",
    description: "Professional imagery for brands and businesses.",
    href: "/services/commercial/",
  },
  {
    name: "Landscape",
    description: "Sweeping vistas and natural beauty.",
    href: "/services/landscape/",
  },
  {
    name: "Cars",
    description: "Automotive photography that captures character.",
    href: "/services/cars/",
  },
  {
    name: "Events",
    description: "Corporate gatherings and special occasions.",
    href: "/services/events/",
  },
  {
    name: "Live Performances",
    description: "The energy and emotion of live music.",
    href: "/services/live-performances/",
  },
  {
    name: "Assignments",
    description: "Editorial and commissioned work.",
    href: "/services/assignments/",
  },
];
---

<PageLayout title="Services" description="Photography services offered by Simon Wickes.">
  <section class="mx-auto max-w-4xl px-6 py-16 md:py-24">
    <h1 class="mb-4 text-center font-display text-4xl font-bold tracking-tight md:text-5xl">
      Services
    </h1>
    <p class="mx-auto mb-12 max-w-2xl text-center text-lg text-surface-600 dark:text-surface-400">
      From intimate portraits to grand celebrations, explore the photography services I offer.
    </p>

    <div class="grid gap-6 sm:grid-cols-2">
      {
        services.map((service) => (
          <a
            href={service.href}
            class="group block rounded-lg border border-surface-200 p-6 transition-colors hover:border-accent-500 hover:bg-surface-50 dark:border-surface-700 dark:hover:border-accent-400 dark:hover:bg-surface-800"
          >
            <h2 class="mb-2 font-display text-xl font-semibold group-hover:text-accent-600 dark:group-hover:text-accent-400">
              {service.name}
            </h2>
            <p class="text-surface-600 dark:text-surface-400">
              {service.description}
            </p>
          </a>
        ))
      }
    </div>
  </section>
</PageLayout>
