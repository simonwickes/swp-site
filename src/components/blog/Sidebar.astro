---
import type { CollectionEntry } from "astro:content";
import { getAuthorById } from "@/data/authors";
import { getServiceBySlug } from "@/data/services";
import { formatPostDate } from "@/utils/formatDate";

interface Props {
  authorId: string;
  relatedPosts: CollectionEntry<"blog">[];
  currentCategory: string;
}

const { authorId, relatedPosts, currentCategory } = Astro.props;

const author = getAuthorById(authorId);
const categoryService = getServiceBySlug(currentCategory);
const categoryTitle = categoryService?.title ?? currentCategory;
---

<aside class="lg:sticky lg:top-8 space-y-6">
  {/* Author Section */}
  {
    author && (
      <div class="bg-surface-100 dark:bg-surface-800 rounded-lg p-6">
        <div class="flex items-center gap-3 mb-3">
          <div class="w-12 h-12 rounded-full bg-surface-300 dark:bg-surface-600 flex items-center justify-center text-surface-600 dark:text-surface-300 font-display font-bold text-lg">
            {author.name
              .split(" ")
              .map((n) => n[0])
              .join("")}
          </div>
          <div>
            <h3 class="font-display font-bold text-surface-900 dark:text-surface-100">
              {author.name}
            </h3>
            <p class="text-xs text-surface-500 dark:text-surface-400">Author</p>
          </div>
        </div>
        <p class="text-sm text-surface-600 dark:text-surface-400 leading-relaxed">
          {author.bio}
        </p>
      </div>
    )
  }

  {/* Related Posts Section */}
  {
    relatedPosts.length > 0 && (
      <div class="bg-surface-100 dark:bg-surface-800 rounded-lg p-6">
        <h3 class="text-sm font-semibold uppercase tracking-wide text-surface-500 dark:text-surface-400 mb-4">
          Related Posts
        </h3>
        <ul class="space-y-4">
          {relatedPosts.slice(0, 6).map((post) => (
            <li>
              <a
                href={`/blog/${post.id}`}
                class="block group hover:bg-surface-200 dark:hover:bg-surface-700 -mx-2 px-2 py-1 rounded transition-colors"
              >
                <p class="text-sm font-medium text-surface-800 dark:text-surface-200 line-clamp-2 group-hover:text-accent-600 dark:group-hover:text-accent-400 transition-colors">
                  {post.data.title}
                </p>
                <p class="text-xs text-surface-400 dark:text-surface-500 mt-1">
                  {formatPostDate(post.data.date)}
                </p>
              </a>
            </li>
          ))}
        </ul>
        <a
          href={`/blog?category=${currentCategory}`}
          class="inline-block mt-4 text-sm text-accent-600 dark:text-accent-400 hover:underline"
        >
          More in {categoryTitle} &rarr;
        </a>
      </div>
    )
  }
</aside>
